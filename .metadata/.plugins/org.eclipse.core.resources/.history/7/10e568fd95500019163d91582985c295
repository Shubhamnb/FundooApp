package com.bridge.CashCounter;

import java.util.Scanner;

public class CashCounTer {
	int mainBalance = 900000;
	public void changeBalance(int amount) {
		mainBalance = mainBalance + amount;
	}
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		BankTransaction bnk = new BankTransaction();
		int i=0, key=0;
		int num = 0;
		try {
			
			key = sc.nextInt();
			System.out.print("Enter a Number Of Person In Queue :");
			num = sc.nextInt();
			Queue qu = new Queue(num);
			for (int j = 0; j < num; j++) {
				System.out.println("Enter "+(j+1)+"st Person Name :");
				Person per = new Person(sc.next());
			}
			for(int k = 0; k < num; k++) {
				bnk.bankDisplay();
				
				while(i != 1) {

					switch (key) {
					
				
						case 1:
							System.out.print("Enter deposite Amount :");
							bnk.deposite(sc.nextInt());
							System.out.print("If you wont to continue Y | N :");
							if(sc.next().charAt(0) == 'Y') {
								bnk.bankDisplay();
								i = 0;
							}else {
								System.out.println("Thanku for Banking");
								i = 1;
							}
							break;
					
				
				
						case 2:
							System.out.print("Enter withDraw Amount :");
							bnk.withDraw(sc.nextInt());
							System.out.print("If you wont to continue Y | N :");
							if(sc.next().charAt(0) == 'Y') {
								bnk.bankDisplay();
								i = 0;
							}else {
								System.out.println("Thanku for Banking");
								i = 1;
							}
							break;
					
					
				
						case 3:
							bnk.viewBalance();
							System.out.print("If you wont to continue Y | N :");
							if(sc.next().charAt(0) == 'Y') {
								bnk.bankDisplay();
								i = 0;
							}else {
								System.out.println("Thanku for Banking");
								i = 1;
							}
							break;
					
				
				
						default:
							System.out.println("You Enter Wrong Input");
							System.out.print("Plese Enter 1|2|3 :");
							key = sc.nextInt();
							i = 0;
							break;
					}//Switch				
				}//while
			}//for
			
		} catch (Exception e) {
			System.err.println("Wrong Input ");
			System.exit(0);
		}
	}

}
