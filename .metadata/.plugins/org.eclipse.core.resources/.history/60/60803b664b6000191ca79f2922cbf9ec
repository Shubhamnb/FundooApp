package com.bridge.addressbook;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;

import org.codehaus.jackson.JsonNode;
import org.codehaus.jackson.map.ObjectMapper;
import org.codehaus.jackson.node.ObjectNode;

public class Edit {

	public void editCity() throws IOException {
		byte[] jsonData = Files.readAllBytes(Paths.get("person.json"));
		ObjectMapper objectMapper = new ObjectMapper();
		
		//create JsonNode
		JsonNode rootNode = objectMapper.readTree(jsonData);
		for (int i = 0; i < jsonData.length; i++) {
				rootNode = rootNode.get(i);
				if(i == 0) {
					//update JSON data
					((ObjectNode) rootNode).put("City", "Delhi");
				}
			objectMapper.writeValue(new File("person.json"), rootNode);
		}
	}

	public void editAddress() {
		
		
	}

	public void editPinCode() {
		
		
	}

	public void editMobile() {
		
		
	}
	
}
