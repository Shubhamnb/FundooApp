package com.bridge.CashCounter;

import javax.swing.plaf.basic.BasicInternalFrameTitlePane.IconifyAction;

public class Queue {
	Person pers[];
	int front, rear, size, l;
	
	public Queue(int n) {
		pers = new Person[n];
		front = rear = -1;
		size = -1;
		l = n;
	}
	
	/****Method to check Queue is empty or not*****/
	public boolean isEmpty() {
		if(front == -1 && rear == -1) 
			return true;
		if(front > rear) {
			front = rear = -1;
			return true;
		}
		return false;
	}
	
	
	/****Method to check Queue is full or not*****/
	public boolean isFull() {
		if(front == 0 && rear == l-1) 
			return true;
		return false;
	}
	public void enqueue(Person p) {
		if(isEmpty()) {
			front = front + 1;
			rear = rear + 1;
			pers[front] = p;
		}else {
			
		}
	}
}
