package com.bridge.CashCounter;

public class BankTransaction {
	
	int balance;
	
	CashCounTer cash = new CashCounTer();
	public void bankDisplay() {
		System.out.println("Welcom to Bank");
		System.out.println("1. Deposite");
		System.out.println("2. WithDraw");
		System.out.println("3. ViewBalance");
		System.out.print("Press 1|2|3 :");
	}
	public void deposite(int amount) {
		balance = balance + amount;
		cash.changeBalance(amount);
	}
	public void withDraw(int amount) {
		if(amount > balance) 
			System.out.println("WithDraw Amount is more than Balance");
		
		if(amount > cash.mainBalance)
			System.out.println("Cash Is Not available");
		balance = balance - amount;
		cash.changeBalance(-amount);
	}
	public void viewBalance() {
		System.out.println("Your Balance is = "+balance);
	}
}
