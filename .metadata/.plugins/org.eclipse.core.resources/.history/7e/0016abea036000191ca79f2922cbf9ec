package com.bridge.addressbook;

import java.util.Scanner;

public class AdrresBookMain {
	static Scanner sc;
	static {
		sc = new Scanner(System.in);
	}
	public static void main(String[] args) {
		 Person[] person = getPerson();
	}
	private static Person[] getPerson() {
		System.out.print("Enter no of person : ");
		int num = sc.nextInt();
		Person[] person = new Person[num];
		for (int i = 0; i < num; i++) {
			person[i] = new Person();
			System.out.print("Enter "+(i+1)+" Person First Name : ");
			person[i].setfName(sc.next());
			System.out.print("Enter "+(i+1)+" Person Last Name  : ");
			person[i].setlName(sc.next());
			System.out.print("Enter "+(i+1)+" Person City       : ");
			person[i].setCity(sc.next());
		}
		return null;
	}

}
