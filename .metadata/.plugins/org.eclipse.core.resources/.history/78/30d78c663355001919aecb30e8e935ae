package com.bridge.prime;



public class Prime2D {
	
	
	
	public static void main(String[] args) {
		int cn[] = new int[10];
		int primeNumber[] = new int[250];
		int[][] ar = new int[10][];
		int count = 0;
		int k = 0;
		int p = 0 ;
		
		
		for(int i = 2; i < 1000; i++) {
			if (i == 2) {
				count++;
				continue;
			}
			for (int j = 2; j < i; j++) {
				if(i % j == 0) {
					break;
				}
				if (j == (i - 1)) {
					primeNumber[p] = i;
					p++;
					count++;
				}
			}
			if(i == 100) {
				cn[k] = count;
				count = 0;
				k++;
			}
		}
		
		
		/*For loop for 2d jagged array*/
		for (int i = 0; i < 10; i++) {
			ar[i] = new int[cn[i]];
		}
		
		for (int i = 0; i < primeNumber.length; i++) {
			System.out.print(" "+primeNumber[i]);
		}
		
	}
}
