		JSONParser parser = new JSONParser();
		return companyShare;
		
	}
	
	private static UserStockDetails[] convertJsonFileToObject(UserStockDetails[] userStockDetails) {
		JSONParser parser = new JSONParser();
		return userStockDetails;
		
	}
