package com.bridge.LinkedList1;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

import com.bridge.LinkedList.LinkedList;

public class LinkedListDemo2 {

	public static void main(String[] args) throws FileNotFoundException {
		
		//Read file
		File file = new File("/home/admin3/Shubham/int.txt");
		Scanner sc = new Scanner(file);
		Scanner sc1 = new Scanner(System.in);
		LinkedList list = new LinkedList();
		String[] str = sc.nextLine().split(" ");
		int arr[] = new int[str.length];
		int num  = 0;
		
		//converted String array into int array
		for (int i = 0; i < str.length; i++) {
			arr[i] = Integer.parseInt(str[i]);
		}
		/*
		 * for (int i : arr) { System.out.print(i+" "); }
		 */
		//Add a element to list
		for (int i = 0; i < arr.length; i++) {
			list.add(arr[i]);
		}
		list.show();
		try {
			System.out.println("Enter a Number");
			num = sc1.nextInt();
			list.add(num);
			list.show();
		}catch (Exception e) {
			System.err.print("Wrong Input");
			e.printStackTrace();
			System.exit(0);
		}
	}

}
