package com.bridge.JSON;

import java.io.File;
import java.util.ArrayList;

import org.codehaus.jackson.map.ObjectMapper;

public class ObjectMapperJSON {
	public static void main(String[] args) {
		ObjectMapper mapper = new ObjectMapper();
		try {
			MyPojo pojo = mapper.readValue(new File("simpleJson.json"), MyPojo.class);
			System.out.println(pojo.getName());
			
			Car[] list = mapper.readValue(new File("CarJson.json"), Car[].class);
			System.out.println(list[0].getName());
			
			
			MyPojo myPojo1 = new MyPojo(12, "Rahul", {"Green", "Red"});
		}catch (Exception e) {
			e.printStackTrace();
		}
	}
}
